<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num Salle"
        android:id="@+id/tv_numSalle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Climatis"
        android:id="@+id/tv_clim"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/uu"
        android:id="@+id/imageButton3"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batiment"
        android:id="@+id/tv_Batim" />

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ff"
        android:id="@+id/imageButton4"
        android:layout_gravity="right"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projection"
        android:id="@+id/tv_project"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="effectifs"
        android:id="@+id/tv_effect" />


</LinearLayout>